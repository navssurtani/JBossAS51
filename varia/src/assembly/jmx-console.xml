<assembly>
  <id>jmx-console</id>
  <formats>
    <format>war</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <files>
    <file>
      <source>src/resources/jmx/jmx-console-web.xml</source>
      <outputDirectory>/WEB-INF</outputDirectory>
      <destName>web.xml</destName>
    </file>
  </files>
  <fileSets>
    <fileSet>
      <directory>src/resources/jmx/web-inf</directory>
      <outputDirectory>/WEB-INF</outputDirectory>
    </fileSet>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/WEB-INF/classes</outputDirectory>
      <includes>
        <include>org/jboss/jmx/adaptor/**</include>
      </includes>
      <excludes>
        <exclude>org/jboss/jmx/adaptor/snmp/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/resources/jmx/</directory>
      <outputDirectory>/WEB-INF/classes</outputDirectory>
      <includes>
        <include>*.properties</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/resources/jmx/html</directory>
      <outputDirectory>/</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>