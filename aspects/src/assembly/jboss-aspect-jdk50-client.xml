<assembly>
  <id>jboss-aspect-jdk50-client</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.jboss.ejb3:jboss-ejb3-async</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/asynch/**.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.jboss.aspects:jboss-remoting-aspects</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/remoting/InvokeRemoteInterceptor.class</include>
          <include>org/jboss/aspects/remoting/IsLocalInterceptor.class</include>
          <include>org/jboss/aspects/remoting/MergeMetaDataInterceptor.class</include>
          <include>org/jboss/aspects/remoting/PojiProxy.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.jboss.aspects:jboss-transaction-aspects</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/tx/ClientTxPropagationInterceptor.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.jboss.cluster:jboss-ha-client</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/remoting/**.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>