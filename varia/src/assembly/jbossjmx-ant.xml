<assembly>
  <id>jbossjmx-ant</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org/jboss/ant/**</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.jboss.naming:jnpserver</include>
      </includes>
      <unpack>true</unpack>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.jboss.jbossas:jboss-as-server</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/jmx/adaptor/rmi/RMIAdaptor.class</include>
          <include>org/jboss/jmx/adaptor/rmi/RMIAdaptorImpl_Stub.class</include>
          <include>org/jboss/jmx/adaptor/rmi/RMIAdaptorService.class</include>
          <include>org/jboss/jmx/connector/**</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>