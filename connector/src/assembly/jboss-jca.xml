<assembly>
  <id>jboss-jca</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <excludes>
        <exclude>**/adapter/**</exclude>
        <exclude>org/jboss/resource/deployers/**</exclude>
      </excludes>
    </fileSet>
    <fileSet>
      <directory>src/resources</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>dtd/**</include>
        <include>stylesheets/**</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>