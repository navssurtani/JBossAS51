<assembly>
  <id>jboss-aspect-library</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org/jboss/aop/junit/**</include>
        <include>org/jboss/aspects/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/etc</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org/jboss/**/*.xml</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.jboss.ejb3:jboss-ejb3-async</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/asynch/**.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.jboss.aspects:jboss-current-invocation-aspects</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/currentinvocation/**.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.jboss.aspects:jboss-remoting-aspects</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/remoting/**.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
    <dependencySet>
      <includes>
        <include>org.jboss.aspects:jboss-transaction-aspects</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/aspects/tx/**.class</include>
          <include>org/jboss/aspects/txlock/**.class</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>