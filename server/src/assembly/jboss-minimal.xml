<assembly>
  <id>jboss-minimal</id>
  <formats>
    <format>jar</format>
  </formats>
  <includeBaseDirectory>false</includeBaseDirectory>
  <fileSets>
    <fileSet>
      <directory>target/classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org/jboss/invocation/**</include>
        <include>org/jboss/logging/**</include>
        <include>org/jboss/naming/**</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>target/rmi-classes</directory>
      <outputDirectory>/</outputDirectory>
      <includes>
        <include>org/jboss/invocation/**</include>
      </includes>
    </fileSet>
  </fileSets>
  <dependencySets>
    <dependencySet>
      <includes>
        <include>org.jboss.remoting:jboss-remoting</include>
      </includes>
      <unpack>true</unpack>
      <unpackOptions>
        <includes>
          <include>org/jboss/remoting/util/**</include>
          <include>org/jboss/remoting/serialization/**</include>
          <include>org/jboss/remoting/loading/ObjectInputStreamWithClassLoader*</include>
        </includes>
      </unpackOptions>
    </dependencySet>
  </dependencySets>
</assembly>